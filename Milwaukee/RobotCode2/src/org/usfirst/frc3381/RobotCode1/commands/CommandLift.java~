    // Called repeatedly when this Command is scheduled to run
    @Override
    protected void execute() {
    	
    	SmartDashboard.putNumber("Lift Encoder Value", Robot.lift.getliftEncoder());
    	SmartDashboard.putNumber("Lift Setpoint", Robot.lift.getSetpoint());
    	
    	if(Robot.oi.joystick2.getRawButton(3)) Robot.lift.manualControl(-1.0);
    	else if(Robot.oi.joystick2.getRawButton(2)) Robot.lift.manualControl(1.0);
    	else if(Robot.oi.joystick2.getRawButton(7)) Robot.lift.setSetpoint(0);
    	else if(Robot.oi.joystick2.getRawButton(6)) Robot.lift.setSetpoint(-13);
    	else if(Robot.oi.joystick2.getRawButton(10)) Robot.lift.setSetpoint(-30);
    	else if(Robot.oi.joystick2.getRawButton(11)) Robot.lift.setSetpoint(-39.5);
    	else if(Robot.oi.joystick2.getRawButton(8) && Robot.oi.joystick2.getRawButton(9)) Robot.lift.resetEncoder();
    	else Robot.lift.enable();
    	
    }

    // Make this return true when this Command no longer needs to run execute()
